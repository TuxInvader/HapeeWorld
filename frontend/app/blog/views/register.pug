extends layout

block content
  -data = data || {}

  div.form-wrapper
    if errors
      ul.error-messages
        for error in errors
          li= error.msg

    form(action="/register" method="POST")
      div.mb-3
        label(for="name").form-label Name:
        input(
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Enter your name"
          value=data.name
        )
      div.mb-3
        label(for="email").form-label Email:
        input(
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="Enter your email"
          value=data.email
        )

      div.mb-3
        label(for="password").form-label Password:
        input(
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Chose a STRONG password"
          value=data.password
        )


      input(
        type="submit"
        class="btn btn-primary"
        value="Submit"
      )