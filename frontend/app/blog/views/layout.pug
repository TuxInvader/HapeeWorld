    div.container
      header.border-bottom.lh-1.py-4
        h1.text-center
          a(href='/')
            img(src="/images/hapee-world.png")

        nav.navbar.navbar-expand-lg.bg-body-tertiary
          div.container-fluid
            a(href='/').navbar-brand
              img(src='/images/loady.png' alt='HAPEE', width='50' height='auto')
            button(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation").navbar-toggler
              span.navbar-toggler-icon

            div(id='navbarSupportedContent').hapee-navbar.collapse.navbar-collapse
              ul.navbar-nav.me-auto.mb-2.mb-lg-0
                li.nav-item
                  if location == 'home'
                    a(href='/', aria-current="page").nav-link.active Home
                  else
                    a(href='/', id='home').nav-link Home
                li.nav-item
                  if location =='tea'
                    a(href='/tea', aria-current="page").nav-link.active Tea
                  else
                    a(href='/tea').nav-link Tea
                li.nav-item
                  if location =='coffee'
                    a(href='/coffee', aria-current="page").nav-link.active Coffee
                  else
                    a(href='/coffee').nav-link Coffee
                li.nav-item
                  if location == 'about'
                    a(href='/about', aria-current="page").nav-link.active About
                  else
                    a(href='/about').nav-link About
                li.nav-item
                  if location == 'register'
                    a(href='/register', aria-current="page").nav-link.active Register
                  else
                    a(href='/register').nav-link Register
                li.nav-item
                  if location == 'login'
                    a(href='/login', aria-current="page").nav-link.active Login
                  else 
                    a(href='/login').nav-link Login
                li.nav-item
                  if location == 'sysadmin'
                    a(href='/sysadmin', aria-current="page").nav-link.active SysAdmin
                  else 
                    a(href='/sysadmin').nav-link SysAdmin
                
              div(style="width: 32px; height: 32px;").happee-navbar.flex-row-reverse.me-3
                ul.navbar-nav.flex-row.flex-wrap
                  li.nav-item.dropdown
                    button(id="theme-toggle", type="button", aria-expanded="false", data-bs-toggle="dropdown", data-bs-display="static", aria-label="Toggle Theme (auto)").btn.btn-link.nav-link.dropdown-toggle.align-items-center.show
                      svg.nav-icon.my-1.theme-icon-active 
                        use(href="#circle-half")
                      span(id="theme-text").d-none Toggle Theme (auto)
                    ul(aria-labelled-by="theme-text").dropdown-menu.dropdown-menu-end
                      li
                        button(type="button", data-bs-theme-value="auto", aria-pressed="false").dropdown-item.d-flex.align-items-center
                          svg.nav-icon.me-2.opacity-50.theme-icon 
                            use(href="#circle-half")
                          | Auto
                          svg.nav-icon-check.ms-auto.d-none 
                            use(href="#checked")
                      li
                        button(type="button", data-bs-theme-value="light", aria-pressed="true").dropdown-item.d-flex.align-items-center.active
                          svg.nav-icon.me-2.opacity-50.theme-icon 
                            use(href="#sun-fill")
                          | Light
                          svg.nav-icon-check.ms-auto.d-none 
                            use(href="#checked")
                      li
                        button(type="button", data-bs-theme-value="dark", aria-pressed="false").dropdown-item.d-flex.align-items-center
                          svg.nav-icon.me-2.opacity-50.theme-icon 
                            use(href="#moon-stars-fill")
                          | Dark
                          svg.nav-icon-check.ms-auto.d-none 
                            use(href="#checked")

      block content
      div.container.pb-2.pt-2
        hr
